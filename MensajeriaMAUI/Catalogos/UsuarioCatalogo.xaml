<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MensajeriaMAUI.Catalogos.UsuarioCatalogo"
             Title="Editar Usuario">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Información del Usuario" FontSize="Large" FontAttributes="Bold" 
                   HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Frame BorderColor="LightGray" Padding="10" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Nombre de Usuario" FontAttributes="Bold"/>
                    <Entry x:Name="NombreUsuarioEntry" Text="{Binding nombre_usuario}" 
                           Placeholder="Ingrese nombre de usuario"/>

                    <Label Text="Contraseña" FontAttributes="Bold"/>
                    <Entry x:Name="ContrasenaEntry" Text="{Binding contrasena_hash}" 
                           IsPassword="True" Placeholder="Ingrese contraseña"/>
                </VerticalStackLayout>
            </Frame>

            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                <Button x:Name="GuardarButton" Text="Guardar" Clicked="GuardarButton_Clicked"
                        BackgroundColor="#128C7E" TextColor="White" WidthRequest="120"/>
                <Button x:Name="CancelarButton" Text="Cancelar" Clicked="CancelarButton_Clicked"
                        BackgroundColor="#B3B3B3" TextColor="White" WidthRequest="120"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
